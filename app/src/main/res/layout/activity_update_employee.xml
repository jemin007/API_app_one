<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".UpdateEmployee">

    <EditText
        android:id="@+id/etEmpNo_Update"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Enter Employee No."
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Search"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/btnSearchEmp_Update"/>
    <EditText
        android:id="@+id/etEmpNo_UpdateTwo"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Employee No."
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/etEmpSal_Update"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Employee Salary"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/etEmpAge_Update"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Employee Age"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Update"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/btnUpdateEmp_Update"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Delete"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/btnDeleteEmp_Update"/>


</LinearLayout>